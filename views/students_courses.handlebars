<div class="my-5">
        <h1 style="text-align: center">Students_Courses</h1>
        <h3 style="text-align: center"> This page is for adding and removing course and student information to the database</h3>
</div>

<div class="container">
    <!--Table with Attributes-->
    <table class="table table-hover">
        <thead>
        <tr>
            {{#each data.[0]}}
            <th scope="col">
                {{@key}}
            </th>
            {{/each}}
        </tr>
        </thead>

        <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.student_id}}</td>
                    <td>{{this.course_id}}</td>
                    <td>{{this.course_name}}</td>
                    <td><button onclick="deleteStudentCourse({{this.course_id}},{{this.student_id}})">Delete</button></td>
                </tr>
                {{/each}}
        </tbody>
    </table>
</div>

<div class="container">
<form id="add-student_course-form" method="POST" action="/add-student_course-form">
    <h3>Add New Pair</h3>
    <select name="course_id" id="course_id" required>
        <option value="">Select a course_id</option>
        {{#each courses}}
        <option value="{{this.course_id}}">{{this.course_id}}</option>
        {{/each}}
    </select>

    <select name="student_id" id="student_id" required>
        <option value="">Select a student_id</option>
        {{#each students}}
        <option value="{{this.student_id}}">{{this.student_id}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>
<!-- Unless conditional helper says if validQuery is false, render the html inside the blocks -->
{{#unless validQuery}}
<p style="color: red;">Student Course relation already exists! Please try again.</p>
{{/unless}}
</div>

<script type="text/javascript">
    function deleteStudentCourse(cid, sid){
        $.ajax({
            url: `/course_id/${cid}/student_id/${sid}`,
            type: 'DELETE',
            success: function(result){
                window.location.reload(true)
            }

        })
    }
</script>

