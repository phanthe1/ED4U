<div class="my-5">
        <h1 style="text-align: center">Mentors</h1>
        <h3 style="text-align: center"> This page is for adding and removing mentor information to the database</h3>
</div>

<div class="container">
    <!--Table with Attributes-->
    <table class="table table-hover">
        <thead>
        <tr>
            {{#each data.[0]}}
            <th scope="col">
                {{@key}}
            </th>
            {{/each}}
        </tr>
        </thead>

        <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.mentor_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td><a href="/mentors/{{this.mentor_id}}">Update</a></td>
                    <td><button onclick="deleteMentor({{this.mentor_id}})">Delete</button></td>
                </tr>
                {{/each}}
        </tbody>
    </table>
</div>

<div class="container">
<form id="add-mentor-form" method="POST" action="/add-mentor-form">
    <h3>Add New Mentor</h3>
    <br>
    <label for="firstname">First Name</label>
    <input type="text" name="first_name" id="firstname" required>

    <label for="lastname">Last Name</label>
    <input type="text"name="last_name" id="lastname" required>

    <input type="submit">
    </br>
</form>
</div>

<script type="text/javascript">
    function deleteMentor(id){
        $.ajax({
            url: `/mentors/${id}`,
            type: 'DELETE',
            success: function(result){
                window.location.reload(true)
            }
        })
    }

</script>
