<div class="my-5">
        <h1 style="text-align: center">Mentors</h1>
        <h3 style="text-align: center"> This page is for adding and removing mentor information to the database</h3>
</div>

<div class="container">
    <!--Table with Attributes-->
    <table class="table table-hover">
        <thead>
        <tr>
            {{#each data.[0]}}
            <th scope="col">
                {{@key}}
            </th>
            {{/each}}
        </tr>
        </thead>

        <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.mentor_id}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td><a class="bi bi-pencil-square" href="/mentors/{{this.mentor_id}}"></a></td>
                    <td><a class="bi bi-trash text-danger" onclick="deleteMentor({{this.mentor_id}})"></a></td>
                </tr>
                {{/each}}
        </tbody>
    </table>
</div>

<!-- Forms -->
<div class="container">
    <div class="row justify-content-around">
        <div class="col-sm-6" style="width: 35em;">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add New Mentor</h4>
                    <form id="add-mentor-form" method="POST" action="/add-mentor-form">
                        <label for="firstname" class="form-label">First Name</label>
                            <div class="mb-2">
                                <input type="text" class="form-control" name ="first_name" id="firstname" required>
                            </div>
                        <label for="lastname" class="form-label">Last Name</label>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="last_name" id="lastname" required>
                            </div>
                            <div class="mb-2 text-center">
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function deleteMentor(id){
        $.ajax({
            url: `/mentors/${id}`,
            type: 'DELETE',
            success: function(result){
                window.location.reload(true)
            }
        })
    }

</script>
